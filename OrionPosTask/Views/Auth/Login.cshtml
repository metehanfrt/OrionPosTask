@* Login kullanacağımız için önce seni kullanacağım demeliyim Razor Pages yapısı aslında kısacası*@
@model User



@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }
}


<div style="display: flex;">
    <div style="width: 40%; display: flex; flex-direction: column; justify-content: center; text-align: right; padding-right: 20px;">
        <p style="font-size: 48px; color: #fff; line-height: 1.5;">
            ORİONPOS<br>TELEFON<br>REHBERİ
        </p>
    </div>

    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <main style="width: 400px; padding: 15px; background-color: #ffffff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <form asp-controller="Auth" asp-action="Login" method="post" style="display: flex; flex-direction: column; gap: 20px;">
                <h1 style="font-size: 24px; margin-bottom: 20px; text-align: center; color: #000;">Lütfen Giriş Yap</h1>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }

                <div style="position: relative;">
                    <input type="email" class="form-control" id="floatingInput" placeholder=" " asp-for="Email" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #ccc;">
                    <label for="floatingInput" id="emailLabel" style="position: absolute; top: 10px; left: 10px; font-size: 14px; color: #888; transition: all 0.3s;">Email Adresi</label>
                </div>

                <div style="position: relative;">
                    <input type="password" class="form-control" id="floatingPassword" placeholder=" " asp-for="Password" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #ccc;">
                    <label for="floatingPassword" id="passwordLabel" style="position: absolute; top: 10px; left: 10px; font-size: 14px; color: #888; transition: all 0.3s;">Şifre</label>
                </div>

                <div class="remember-me">
                    <label style="color: #000;">
                        <input type="checkbox" asp-for="RememberMe"> Beni Hatırla
                    </label>
                </div>

                <button class="btn btn-lg btn-primary" type="submit" style="padding: 12px 20px; font-weight: bold; border-radius: 4px; background-color: #4caf50; border-color: #4caf50;">Giriş Yap</button>
                <button class="btn btn-lg btn-primary" asp-controller="Auth" asp-action="Register" type="submit" style="padding: 12px 20px; font-weight: bold; border-radius: 4px; background-color: #4caf50; border-color: #4caf50;">Kaydol</button>

                <p style="margin-top: 20px; font-size: 12px; color: #888; text-align: center;">&copy; 2023–2024</p>
            </form>
        </main>
    </div>

</div>



<script>
    // JavaScript kullanarak ipucu yazıları gizleme ve gösterme işlevleri
    const emailInput = document.getElementById('floatingInput');
    const passwordInput = document.getElementById('floatingPassword');
    const emailLabel = document.getElementById('emailLabel');
    const passwordLabel = document.getElementById('passwordLabel');

    emailInput.addEventListener('input', function () {
        if (this.value !== '') {
            emailLabel.style.visibility = 'hidden';
        } else {
            emailLabel.style.visibility = 'visible';
        }
    });

    passwordInput.addEventListener('input', function () {
        if (this.value !== '') {
            passwordLabel.style.visibility = 'hidden';
        } else {
            passwordLabel.style.visibility = 'visible';
        }
    });
</script>






